            </column>
            <column name="name" order="100">
                <widget type="text" fieldname="nombre" />
            </column>
            <column name="tipo-comandero" order="110">
                <widget type="select" fieldname="tipocomandero" translate="true" required="true">
                    <values title="TPV">-1</values>
                    <values title="Smartphone">0</values>

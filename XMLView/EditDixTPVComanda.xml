<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="data1" numcolumns="12">
            <column name="num-comanda" order="100" display="none">
                <widget type="number" fieldname="idcomanda" readonly="true"/>
            </column>
            <column name="date" order="110">
                <widget type="datetime" fieldname="fecha" required="true" readonly="true"/>
            </column>
            <column name="client" order="120">
                <widget type="select" fieldname="idcliente" required="true">
                    <values source="clientes" fieldcode="codcliente" fieldtitle="nombre"/> 
                </widget>
            </column>
        </group>
        <group name="data2" numcolumns="12">
            <column name="sala" order="130">
                <widget type="select" fieldname="idsalon" required="true">
                    <values source="dix_salones" fieldcode="idsalon" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="mesa" order="130">
                <widget type="select" fieldname="idmesa" required="true">
                    <values source="dix_mesa" fieldcode="idmesa" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="estado" order="120" titleurl="ListDixEstado">
                <widget type="select" fieldname="idestado" required="true">
                    <values source="dix_estado" fieldcode="idestado" fieldtitle="nombre"/> 
                </widget>
            </column>
        </group>
        <group name="data3" numcolumns="12">
            <column name="observaciones" order="160">
                <widget type="textarea" fieldname="observaciones"/>
            </column>
            <column name="total" order="150" display="none">
                <widget type="number" fieldname="total" required="true" readonly="true"/> 
            </column>
        </group>
    </columns>
</view>
<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="idreserva" order="100" display="none">
                <widget type="number" fieldname="idreserva"/>
            </column>
            <column name="name-reserva" order="150" numcolumns="12">
                <widget type="text" fieldname="nombrereserva"/>
            </column>
            <column name="mesa" order="100">
                <widget type="select" fieldname="idmesa">
                    <values source="dix_mesa" fieldcode="idmesa" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="date" order="115">
                <widget type="date" fieldname="fecha"/>
            </column>            
            <column name="hora-inicio" order="120">
                <widget type="time" fieldname="horaini"/>
            </column>      
            <column name="hora-fin" order="130">
                <widget type="time" fieldname="horafin"/>
            </column>
            <column name="comansales" order="140" required="true">
                <widget type="integer" fieldname="personas"/>
            </column>
            <column name="comentarios" order="150">
                <widget type="text" fieldname="comentarios"/>
            </column>
        </group>
    </columns>
</view>
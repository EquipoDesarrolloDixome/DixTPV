    <constraint>
        <name>dix_details_comanda_pkey</name>
        <type>PRIMARY KEY (iddetalle)</type>
    </constraint>
    <constraint>
        <name>dix_details_comanda_producto_fk</name>
        <type>FOREIGN KEY (idproducto) REFERENCES productos (idproducto) ON DELETE RESTRICT ON UPDATE CASCADE</type>
    </constraint> 
    <constraint>
        <name>dix_details_comanda_comanda_fk</name>
        <type>FOREIGN KEY (idcomanda) REFERENCES dix_comanda (idcomanda) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
</table>

        <group name="data" numcolumns="12">
            <column name="Color fondo" numcolumns="3" order="125">
                <widget type="color" fieldname="color_fondo"/>
            </column>
            <column name="Color texto" numcolumns="3" order="125">
                <widget type="color" fieldname="color_texto" default="#000000"/>
            </column>
            <column name="Imagen" numcolumns="6" order="130">
                <widget type="library" fieldname="imagen_tpv" accept=".jpg,.png,.jpeg"/>
            </column>
        </group>
    </columns>
</view>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            align-items: center;
        }
        .title {
            font-weight: bold;
        }
        .inputbox {
            margin-bottom: 10px;
        }
        .keyboard {
            display: grid;
            grid-template-columns: repeat(3, 60px);
            gap: 5px;
            margin-bottom: 10px;
        }
        .keyboard button {
            padding: 10px;
            font-size: 18px;
            cursor: pointer;
        }
        .keyboard .zero {
            grid-column: 1 / 2;
        }
        .keyboard .delete {
            grid-column: 2 / 4;
        }
        #cambioini {
            border: solid;
            padding: 10px;
            margin-right: 10px;
        }
        .container {
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <!-- Contenedor principal con flexbox -->
    <div class="container">
        <div id="cambioini">
            <b class="title">Cambio inicial</b>
            <div>
                <input type="text" class="inputbox" id="inputbox">
            </div>
            <div class="keyboard">
                <button onclick="addToInput('1')">1</button>
                <button onclick="addToInput('2')">2</button>
                <button onclick="addToInput('3')">3</button>
                <button onclick="addToInput('4')">4</button>
                <button onclick="addToInput('5')">5</button>
                <button onclick="addToInput('6')">6</button>
                <button onclick="addToInput('7')">7</button>
                <button onclick="addToInput('8')">8</button>
                <button onclick="addToInput('9')">9</button>
                <button class="zero" onclick="addToInput('0')">0</button>
                <button class="delete" onclick="deleteFromInput()">Borrar</button>
            </div>
            <!-- Botón para guardar la cookie -->
        </div>

        <div id="cambioini">
            <b class="title">Terminal</b>
            <div>                    
                <i class="fas fa-band-aid" style="font-size:100px;"></i>
                <i class="fas fa-cat" style="font-size:100px;"></i>
                <br>
                <i class="fas fa-dragon" style="font-size:100px;"></i>
                <i class="far fa-clock" style="font-size:100px;"></i>
            </div>
        </div>
    </div>
    <br>
    <div style="text-align:center; ">
    <button onclick="saveCookie()" >
        <i class="fa fa-cash-register" style="font-size:25px; align-items:center; margin-top:10px;"></i>  
        <p class="title">Iniciar venta</p>
    </button>
    </div>
    <script>
        function addToInput(value) {
            document.getElementById('inputbox').value += value;
        }

        function deleteFromInput() {
            let input = document.getElementById('inputbox');
            input.value = input.value.slice(0, -1);
        }

        function saveCookie() {
            let inputValue = document.getElementById('inputbox').value;
            document.cookie = "DixInput=" + encodeURIComponent(inputValue) + "; path=/; max-age=" + (60 * 60); // Cookie válida por 1 hora
            alert("Cookie guardada: " + inputValue);
                        
            window.location.href = "./DixTPV";  // Reemplaza con la URL correspondiente de tu controlador

        }
    </script>
</body>
</html>

<div class="modal fade" id="modalmesas" tabindex="-1" role="dialog" aria-labelledby="mesasModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="mesasModalLabel">Mesas Disponibles</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                
                    <div class="row">
                        
                            <!-- Incluye la vista de cada mesa -->
                            {% include 'DixTPV/Hosteleria/Ventas/Componentes/mesa.html.twig' with {'waiter': mesa } %}
                        
                    </div>
               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

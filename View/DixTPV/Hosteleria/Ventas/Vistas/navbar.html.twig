    <div class="navbar-left">
        {% if fsc.modoHosteleria %}
            <a class="btn btn-primary" href="#modalmesas" data-bs-toggle="modal" data-bs-target="#modalmesas">Mesas</a>
            <a class="btn btn-primary" href="#modalaparcadosgenerales" data-bs-toggle="modal" data-bs-target="#modalaparcadosgenerales">Aparcados</a>
        {% else %}
            <a class="btn btn-primary" href="#modalaparcados" data-bs-toggle="modal" data-bs-target="#modalaparcados">Aparcados</a>
        {% endif %}
        <a class="btn btn-primary ocultar-movil" href="#modalanteriores" data-bs-toggle="modal" data-bs-target="#modalanteriores">Anteriores</a>
        <a class="btn btn-primary" onclick="activarServicioRapido()">Servicio Rápido</a>
        <a class="btn btn-primary" href="#modalcamareros" data-bs-toggle="modal" data-bs-target="#modalcamareros">Agentes</a>
    </div>

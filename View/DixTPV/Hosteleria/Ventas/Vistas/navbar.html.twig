        <a class="btn btn-danger" onclick="window.location = './Dashboard';">Salir</a>
    </div>
</div>


<script>
    function activarServicioRapido() {
        carrito = localStorage.getItem('carrito');
        // Verifica si el carrito existe y no está vacío
        if (carrito && carrito.trim() !== "" && carrito !== "[]") {
            aparcarCuenta();
        } else {
            // Elimina el contenido de la mesa y el salón seleccionados
            sessionStorage.removeItem('mesaSeleccionada');
            sessionStorage.removeItem('salonSeleccionado');
            sessionStorage.removeItem('idcomanda');
            localStorage.removeItem('idcomanda');

            // Actualiza el texto para mostrar "Servicio rápido"
            const mesaElemento = document.getElementById('mesaSeleccionada');
            if (mesaElemento) {
                mesaElemento.textContent = 'Servicio rápido';
            }
            // Limpia el carrito y el precio
            eliminarCesta();
        }
    }
</script>

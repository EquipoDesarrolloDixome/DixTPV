        <!-- Columna izquierda: Cliente + bot√≥n -->
        <div class="col-6">
            <input type="hidden" name="codcliente" value="">
            <div class="mb-2">
                <div
                    class="row">
                    <!-- Input cliente -->
                    <div class="col-7">
                        <input type="hidden" id="cliente" value="{{ fsc.defaultClient.codcliente }}">
                        <input type="text" onfocus="this.select();" class="form-control" id="nombre_cliente" placeholder="Cliente" value="{{ fsc.defaultClient.nombre }}">
                    </div>

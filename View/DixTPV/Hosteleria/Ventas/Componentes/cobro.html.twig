                            <i class="fas fa-angle-double-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>


        <!-- Columna derecha: Botones de acci√≥n -->
        <div class="col-6">
            <div class="row">
                <div class="col-12 d-flex justify-content-end gap-2">
                    <button class="btn btn-primary" id="setAllButton" onclick="setEntregadoToTotal();">Saldo</button>
                    <button type="button" id="clearTotal" class="btn btn-danger" onclick="limpiarCobrado();">Limpiar</button>
                    <button class="btn btn-success" id="cobrarBoton" onclick="CobrarModal();">Cobrar</button>
                </div>
            </div>
        </div>
    </div>
</div>


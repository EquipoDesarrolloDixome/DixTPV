<!-- Formas de cobro y monedas+billetes -->

<div class="row">
    <div class="col-6 col-sm-6">
        <!-- Formas de pago -->
        <div class="mb-3" id="formaPagoClass">
            <label for="formapago">Forma de pago</label>
            <div class="monedas-billetes" id="formasPago">
                {% set formaPagoDefault = fsc.selectedTerminal.codpago %}
                {% for term in fsc.formaPago %}
                    <div class="pago {% if term.codpago == fsc.selectedTerminal.codpago %}activo{% endif %}" 
                         data-valor="{{ term.codpago }}" 
                         data-esefectivo="{{ term.efectivo ? 'true' : 'false' }}">
                        {{ term.descripcion|length > 15 ? term.descripcion|slice(0, 15) ~ '...' : term.descripcion }}
                    </div>
                {% endfor %}
                <input type="text" class="form-control" id="FormaPago" hidden value="{{ formaPagoDefault }}">
            </div>
        </div>

        {% if not fsc.modoHosteleria %}
        {% set docOptions = {
            'FacturaCliente': 'Factura',
            'AlbaranCliente': 'Albar√°n',
            'PedidoCliente': 'Pedido'
        } %}
        {% set docDefaultKey = fsc.selectedTerminal.doctype ?? 'FacturaCliente' %}
        {% if docOptions[docDefaultKey] is not defined %}
            {% set docDefaultKey = 'FacturaCliente' %}
        {% endif %}
        <div class="mb-3" id="documentTypeSelector">
            <label for="TipoDocumento">Tipo de documento</label>
            <div class="monedas-billetes" id="tiposDocumento">
                {% for docType, label in docOptions %}
                    <div class="pago {% if docType == docDefaultKey %}activo{% endif %}"
                         data-valor="{{ docType }}">
                        {{ label }}
                    </div>
                {% endfor %}
                <input type="text" class="form-control" id="TipoDocumento" hidden value="{{ docDefaultKey }}">
            </div>
        </div>
        {% endif %}

        <!-- üîî Series justo debajo de formas de pago, dentro de misma columna -->
        <div class="mb-3" id="seriesDebajoDeFormasPago">
            <label for="serie">Serie</label>
            <div class="monedas-billetes" id="series">
                {% set serieDefault = fsc.selectedTerminal.codserie ?? fsc.series[0].codserie %}
                {% for serie in fsc.series %}
                    <div class="pago {% if serie.codserie == serieDefault %}activo{% endif %}" 
                         data-valor="{{ serie.codserie }}">
                        {{ serie.descripcion|length > 15 ? serie.descripcion|slice(0, 15) ~ '...' : serie.descripcion }}
                    </div>
                {% endfor %}
                <input type="text" class="form-control" id="SerieSeleccionada" hidden value="{{ serieDefault }}">
            </div>
        </div>
    </div>
    <div class="col-6 col-sm-6 col-md-6">
        <!-- Monedas y billetes representados con cuadros -->
        {% set monedas = [0.01, 0.02, 0.05, 0.10, 0.20, 0.50, 1, 2] %}
        {% set billetes = [5, 10, 20, 50, 100, 200, 500] %}
        <div class="monedas-billetes {% if fsc.defaultPaymentMethod.efectivo != 1 %}ocultar{% endif %}" id="monedasBilletes">
            {% for valor in monedas %}
                <div class="moneda" data-valor="{{ valor }}">{{ valor|number_format(2, ',', '.') }}
                    ‚Ç¨</div>
                {% endfor %}
                {% for valor in billetes %}
                <div class="billete" data-valor="{{ valor }}">{{ valor }}
                    ‚Ç¨</div>
                {% endfor %}
        </div>
    </div>
</div>
